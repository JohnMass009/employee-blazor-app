@page "/"

<MudContainer>
    <MudText Typo="Typo.h4">@GetGreeting()</MudText>
</MudContainer>

@code {
    private enum TimeOfDay { Утро, День, Вечер, Ночь }

    private static readonly List<(TimeOfDay Time, int Start, int End, string Message)> Greetings = new()
    {
        (TimeOfDay.Утро, 6, 9, "Доброе утро!"),
        (TimeOfDay.День, 10, 16, "Добрый день!"),
        (TimeOfDay.Вечер, 17, 21, "Добрый вечер!"),
        (TimeOfDay.Ночь, 22, 23, "Доброй ночи!"),
        (TimeOfDay.Ночь, 0, 5, "Доброй ночи!")
    };

    private string GetGreeting()
    {
        var hour = DateTime.Now.Hour;
        var greeting = Greetings.First(g =>
            (hour >= g.Start && hour <= g.End) ||
            (g.Time == TimeOfDay.Ночь && (hour >= g.Start || hour <= g.End))
        );

        return greeting.Message;
    }
}

